<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= thread.title %></title>
    <style>
        .reply-form {
            display: none;
            margin-top: 10px;
        }
        .reply-to-thread {
            margin-left: 20px;
        }
        .reply-to-reply{
            margin-left: 40px;
        }
    </style>
</head>
<body>
    <h1><%= thread.title %></h1>
    <p><%= thread.content %></p>

    <p>Posted by: <%= thread.createdBy.name %> + User id: <%= thread.createdBy._id %></p>
    <form action="/reply/<%= thread._id %>" method="POST">
        <textarea name="content" required></textarea>
        <button type="submit">Reply</button>
    </form>

    <% thread.replies.forEach(reply => { %>
        <div class="reply-<%= reply._id %> reply-to-thread">
            <a href="/profile/<%=reply.createdBy._id %>"><img src="<%= reply.createdBy.photo %>"alt="User's image"></a>
            <p><%= reply.createdBy.name %>:</p>
            <p><%= reply.content %></p>
            <button class="cmt-btn" data-reply-id="<%= reply._id %>">Reply</button>
        </div>
        <% reply.replies.forEach(subReply => { %>

            <div class="reply-to-reply">
            <p><%= subReply.content %></p>
            <p>Reply by: <%= subReply.createdBy.name %></p>
            <% if (subReply.parentReply && subReply.parentReply.createdBy) { %>
                <p>In reply to: <%= subReply.parentReply.createdBy.name %></p>
            <% } %>
            <button class="cmt-btn" data-reply-id="<%= reply._id %>">Reply</button>
            </div>
        <% }) %>
    <% }) %>
    
        


    <form id="form-template" class="reply-form" action="" method="POST">
        <textarea name="content" required></textarea>
        <button type="submit">Reply</button>
    </form>

    <script>
        document.querySelectorAll('.cmt-btn').forEach(button => {
            button.addEventListener('click', function() {
                const formTemplate = document.getElementById('form-template');
                const parent = button.parentNode;
                let form = parent.querySelector('.reply-form');

                if (form) {
                    form.style.display = form.style.display === 'none' ? 'block' : 'none';
                } else {
                    form = formTemplate.cloneNode(true);
                    form.style.display = 'block';
                    form.id = '';

                    if (button.hasAttribute('data-reply-id')) {
                        form.action = `/reply-to-reply/${button.getAttribute('data-reply-id')}`;
                    } else {
                        form.action = `/reply/${button.getAttribute('data-thread-id')}`;
                    }

                    parent.appendChild(form);
                }
            });
        });
    </script>
</body>
</html>