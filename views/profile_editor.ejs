<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/profile-editor.css">
</head>

<body>
  <h1>put nav and things here</h1>

  <div class="text-center fs-1">Profile editor</div>
  <div class="container-fluid">

    <div class="row mx-auto">
      <div class="col-lg-2 d-lg-block d-none">
        <div class="border border-black">left</div>
      </div>

      <!-- PROFILE STARTS HERE -->

      <div class="col-lg-8 col-12 d-lg-flex flex-column border border-black p-0 mx-auto">
        
          <!-- img-username-mini desc container -->
          <div class="container-fluid d-lg-flex d-sm-block flex-lg-row ">

            <form action="/profilePic-edit" method="post" id="pfp-form" enctype="multipart/form-data">
            <div class="userImg">
              <div class="container-fluid d-flex mx-auto justify-content-center">
                <input name="image" type="file" id="file" class="file" accept="jpeg, jpg, png">
                <label for="file" class="uploadbtn" id="uploadbtn">
                  <img src="<%=user.photo%>" id="photo" class="photo">
                </label>
              </div>
            </div>
          </form>
            <!-- user name and mini desc container -->
            <div class="container-fluid d-flex flex-column w-50 w-100">
              <!-- form for entering username -->
              <form action="/profile/edit" method="post">
              <div class="m-2 fs-1 d-flex j">
                <input type="text" name="name" id="name" value="<%= user.name %>">
              </div>
              <div class="text-wrap mx-2">
                <input type="text" name="status" id="status" value="<%= user.status %>">
              </div>
              <!-- ALERT IF WRONG IMAGE FORMAT-->
              <% if(typeof message !="undefined" && message) { %>
                <div class="mt-3 message">
                  <div class="alert alert-danger alert-dismissible" role="alert">
                    <div><%= message %></div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                </div>
                <%}%>
            </div>
          </div>
          <!-- "about" and main desc container -->
          <div class="container-fluid">
            <h1 class="m-3">About</h1>
            <div class="mx-3">
              <input type="text" name="description" id="description" value="<%= user.description %>">
            </div>
          </div>
          <div>
            <button type="submit">Save</button>
          </div>
        </form>
      </div>


      <div class="col-lg-2 d-lg-block d-none">
        <div class="border border-black">right</div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="/javascript/index.js"></script>
</body>

</html>